<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Hello Auction</title>

  <!-- Bootstrap core CSS -->
  <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom fonts for this template -->
  <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
  <link href='https://fonts.googleapis.com/css?family=Fira+Sans|Kaushan+Script' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>

  <!-- Custom styles for this template -->
  <link href="css/list-view.css" rel="stylesheet">

</head>

<body id="page-top">
<% include ../partial-layout/header%>
  <!-- Header -->
   <header class="masthead">
    <div class="container">
        <div class="container">
        <div class="input-group search-bar text-center">
                <div class="input-group-prepend dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown">
                        <i class="fas fa-filter"></i>
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">Search by name</a>
                        <a class="dropdown-item" href="#">Search by category</a>
                    </div>
                </div>
                <input type="text" class="form-control" placeholder="Search your goods">
                <div class="input-group-append">
                    <button class="btn btn-secondary" type="button"><i class="fa fa-search"></i></button>
                </div>
        </div>
    </div>
  </header>
  <!-- Main View -->
   <section class="bg-light page-section" id="list">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading"><%= category.name %> - <%= category.description %></h2>
          <h3 class="section-subheading text-muted">Các sản phẩm hiện có (<%= category.length %> sản phẩm)</h3>
        </div>
      </div>
      <div class="row">
        <% list.forEach(function(item) { %>
        <div class="col-md-4 col-sm-6 list-item">
          <a class="list-link" data-toggle="modal" href="#<%= item.tag %>">
            <div class="list-hover">
              <div class="list-hover-content">
                <i class="fas fa-plus fa-3x"></i>
              </div>
            </div>
            <img class="img-fluid" src="img/list/<%= item.imgID %>-thumbnail.jpg" alt="">
          </a>
          <div class="list-caption">
            <h4><%= item.name %></h4>
            <p class="text-muted">Chủ sở hữu: <%= item.own %></p>
            <p class="text-muted">Giá hiện tại: $<%= item.price %></p>
          </div>
        </div>
        <% }); %>
        </div>
      </div>
     <ul class="pagination justify-content-center">
      <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
      <li class="page-item active"><a class="page-link" href="#">1</a></li>
      <li class="page-item"><a class="page-link" href="#">2</a></li>
      <li class="page-item"><a class="page-link" href="#">3</a></li>
      <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>
    </div>
  </section>
  <!-- Footer -->
  <% include ../partial-layout/footer%>
  <!-- list Modals -->
    <!-- Modal 1 -->
    <% list.forEach(function(item) { %>
    <div class="list-modal modal fade" id="<%= item.tag %>" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="close-modal" data-dismiss="modal">
                    <div class="lr">
                        <div class="rl"></div>
                    </div>
                </div>
                <div class="container">
                    <div class="row featurette ">
                        <div class="col-lg-5 mx-auto">
                            <div class="modal-body">
                                <img class="img-fluid d-block mx-auto mt-5" src="img/top-chart/<%= item.imgID %>-full.jpg" alt="">
                                <div>
                                    <button type="button" class="btn-bid btn-outline-warning"><i class="fas fa-search"></i></button>
                                    <button type="button" class="btn-bid btn-outline-warning"><i class="far fa-heart"></i></button>
                                    <button type="button" class="btn-bid btn-outline-warning"><i class="fas fa-gavel"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-7 mx-auto">
                            <h1 class=" product-title ">
                                <%= item.name %>
                            </h1>
                            <h1 class=" product-price mt-4"> Current Bid: $
                                <%= item.price %>
                            </h1>
                            <hr class="featurette-divider">
                            <!-- Project Details Go Here -->
                            <p class="content">ABCDE laptop on the lid is designed with aluminum alloy with characteristic concentric circles, in addition to the surface is covered with a layer of flashy diamond imitation with advanced nano embossing technology, "light
                                weight" standard with 1.2kg weight. The design of the device tapers towards the keyboard, so holding the phone or moving is still comfortable and easy.</p>
                            <!--<%= item.description %>-->
                            <button type="button" class="btn-buynow btn-warning  mb-5">BUY NOW FOR $
                                <%= item.price+200 %>
                            </button>
                            <ul class="list-inline content mx-auto">
                                <li>People post the product: <%= item.own %></li>
                                <li>Posted date: <%= item.dateStart %></li>
                                <li>End date: <%= item.dateEnd %></li>
                                <li>Category: <%= item.type %></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% }); %>
  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Plugin JavaScript -->
  <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/index.js"></script>

</body>

</html>
