<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Hello Auction</title>

    <!-- Bootstrap core CSS -->
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Fira+Sans|Kaushan+Script' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>

    <!-- Custom styles for this template -->
    <link href="/css/detailsProduct-seller.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Navigation -->
    <% include ../partial-layout/header%>
        <!-- Header -->
        <header class="masthead">
            <div class="container">
                <div class="input-group search-bar text-center">
                    <div class="input-group-prepend dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown">
                            <i class="fas fa-filter"></i>
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Search by name</a>
                            <a class="dropdown-item" href="#">Search by category</a>
                        </div>
                    </div>
                    <input type="text" class="form-control" placeholder="Search your goods">
                    <div class="input-group-append">
                        <button class="btn btn-secondary" type="button"><i class="fa fa-search"></i></button>
                    </div>

                </div>
                <br> <br>
            </div>
        </header>

        <!-- container -->
        <section class="bg-light page-section">
            <div class="container ">
                <ul class="breadcrumb">
                    <li><a href="../index.html">Home</a></li>
                    <li><a href="../list-view.html">Product</a></li>
                    <li><a href="../list-view.html">Laptop</a></li>
                    <li>
                        <%= product.name %>
                    </li>
                </ul>
                <hr class="featurette-divider ">
            </div>
        </section>

        <section class="bg-light page-section">
            <div class="container">
                <div class="row featurette ">
                    <div class="col-lg-5 mx-auto">
                        <div class="modal-body">
                            <div class="slideshow-container">

                                <!--  images with number  -->
                                <div class="mySlides">
                                    <div class="numbertext">1 / 3</div>
                                    <img src="/img/<%= product.id %>/1-full.jpg" style="width:100%">

                                </div>

                                <div class="mySlides">
                                    <div class="numbertext">2 / 3</div>
                                    <img src="/img/<%= product.id %>/2-full.jpg" style="width:100%">

                                </div>

                                <div class="mySlides">
                                    <div class="numbertext">3 / 3</div>
                                    <img src="/img/<%= product.id %>/3-full.jpg" style="width:100%">
                                </div>

                                <!-- Next and previous buttons -->
                                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                                <a class="next" onclick="plusSlides(1)">&#10095;</a>
                            </div>
                            <br>

                            <!-- Thumbnail images -->
                            <div class="rowslide">
                                <div class="columnslide">
                                    <img class="demo cursor" src="/img/<%= product.id %>/1-full.jpg" style="width:100%" onclick="currentSlide(1)" alt="laptop">
                                </div>
                                <div class="columnslide">
                                    <img class="demo cursor" src="/img/<%= product.id %>/2-full.jpg" style="width:100%" onclick="currentSlide(2)" alt="laptsop">
                                </div>
                                <div class="columnslide">
                                    <img class="demo cursor" src="/img/<%= product.id %>/3-full.jpg" style="width:100%" onclick="currentSlide(3)" alt="laptop">
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="col-lg-7 mx-auto">
                        <!-- Project Details Go Here -->
                        <p class="content">
                            <%= product.detail %>
                        </p>
                        <h1 class=" product-price mt-4"> Current Bid: $
                            <%= product.price %>
                        </h1>
                        <hr class="featurette-divider">
                        <ul class="list-inline content mx-auto">
                            <li>Item condition:
                                <!--%= product.status %!-->
                            </li>
                            <li>Auction starts:
                                <%= product.dateStart %>
                            </li>
                            <li>Auction ends:
                                <%= product.dateEnd %>
                            </li>
                        </ul>

                    </div>
                </div>
            </div>
        </section>


        <!-- product details -->


        <!-- tabs vendor details -->
        <section class="bg-light page-section">
            <div class="container">
                <div class="tab">
                    <button class="tablink" onclick="openTab('Description',this)" id="defaultOpen">DESCRIPTION </button>
                    <button class="tablink" onclick="openTab('Auction history',this)">AUCTION HISTORY</button>
                    <button class="tablink" onclick="openTab('Vendor info',this)">VENDOR INFO</button>
                </div>

                <!-- Tab content -->
                <div id="Description" class="tabcontent">
                    <%- product.details %>
                        <button id="add-description" type="button" class="btn-add-description btn-outline-warning"><i class="fa fa-edit" aria-hidden="true"></i> Add more description</button>
                        <div id="add-more-description" class="tabcontent">
                            <form action="/seller/detailsProduct" method="POST">
                                <textarea id="add-more-description" type="description" name="description" class="form-control add-description-area" placeholder="Add description" required=""></textarea>
                                <button class="btn btn-primary btn-block" id="submit-btn" type="submit"><i class="fas fa-edit"></i> Add</button>
                                <a href="#" id="cancel" class="cancel"><i class="fas fa-angle-left"></i> Back</a>
                            </form>
                        </div>
                </div>

                <div id="Auction history" class="tabcontent tb-auction-history">
                    <table>
                        <tr>
                            <th>ID User</th>
                            <th>User name</th>
                            <th>Date</th>
                            <th>Bid</th>
                            <th>Refuse</th>
                        </tr>
                        <% history.forEach(function(bid) { %>
                            <tr>
                                <td>
                                    <%= bid.id_user %>
                                </td>
                                <td>
                                    <%= bid.username %>
                                </td>
                                <td>
                                    <%= bid.time %>
                                </td>
                                <td>
                                    <%= bid.bid_price %>
                                </td>
                                <td><button class="btn btn-primary btn-refuse"><a data-toggle="modal" href="#confirm-modal">Refuse</a></button></td>
                            </tr>
                            <% }); %>
                    </table>
                </div>

                <div id="Vendor info" class="tabcontent">
                    <p><i class="fas fa-shopping-cart"></i>Store Name:
                        <%= user.name %>
                    </p>
                    <p><i class="fas fa-user"></i>Vendor: <b><%= product.category %></b></p>
                    <p><i class="fas fa-map-marker-alt"></i><b>Email: </b>
                        <%= user.email %>
                    </p>
                    <p><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i> 5 rating from reviewer</p>
                </div>
            </div>

        </section>

        <div class="modal fade text-center" tabindex="-1" role="dialog" aria-labelledby="modal" aria-hidden="true" id="confirm-modal">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <h4>Are you sure</h4>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" id="modal-btn-yes">Yes</button>
                        <button type="button" class="btn btn-danger" id="modal-btn-no">No</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <% include ../partial-layout/footer%>



            <!-- Bootstrap core JavaScript -->
            <script src="/vendor/jquery/jquery.min.js"></script>
            <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

            <!-- Plugin JavaScript -->
            <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

            <!-- Custom scripts for this template -->
            <script src="/js/detailsProduct-seller.js"></script>
            <script src="/js/index.js"></script>


</body>

</html>