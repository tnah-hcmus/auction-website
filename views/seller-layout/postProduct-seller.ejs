<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Hello Auction</title>

    <!-- Bootstrap core CSS -->
    <link href="../vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="../vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Fira+Sans|Kaushan+Script' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>

    <!-- Custom styles for this template -->
    <link href="../css/seller.css" rel="stylesheet">


</head>

<body id="page-top">

    <!-- Navigation -->
    <% include ../partial-layout/header%>

        <!-- Header -->
        <header class="masthead">
            <div class="container">
                <div class="input-group search-bar text-center">
                    <div class="input-group-prepend dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown">
                            <i class="fas fa-filter"></i>
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Search by name</a>
                            <a class="dropdown-item" href="#">Search by category</a>
                        </div>
                    </div>
                    <input type="text" class="form-control" placeholder="Search your goods">
                    <div class="input-group-append">
                        <button class="btn btn-secondary" type="button"><i class="fa fa-search"></i></button>
                    </div>

                </div>
                <br> <br>
            </div>
        </header>

        <!-- container -->
        <section class="bg-light page-section">
            <div class="container ">
                <p class="text-muted ">Home / Product</p>
                <h1>Post Product</h1>
                <hr class="featurette-divider ">
            </div>
        </section>

        <section class="bg-light page-section">
            <div class="container">
                <div class="row featurette ">
                    <div class="col-lg-5 mx-auto">
                        <div class="modal-body">
                            <div class="slideshow-container">

                                <!--  images with number  -->
                                <div class="mySlides">
                                    <div class="numbertext">1 / 3</div>
                                    <img src="../img/<%= product.id %>/01-full.jpg" style="width:100%">

                                </div>

                                <div class="mySlides">
                                    <div class="numbertext">2 / 3</div>
                                    <img src="../img/<%= product.id %>/02-full.jpg" style="width:100%">

                                </div>

                                <div class="mySlides">
                                    <div class="numbertext">3 / 3</div>
                                    <img src="../img/<%= product.id %>/03-full.jpg" style="width:100%">
                                </div>

                                <!-- Next and previous buttons -->
                                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                                <a class="next" onclick="plusSlides(1)">&#10095;</a>
                            </div>
                            <br>

                            <!-- Thumbnail images -->
                            <div class="rowslide">
                                <div class="columnslide">
                                    <img class="demo cursor" src="../img/<%= product.id %>/01-full.jpg" style="width:100%" onclick="currentSlide(1)" alt="laptop">
                                </div>
                                <div class="columnslide">
                                    <img class="demo cursor" src="../img/<%= product.id %>/02-full.jpg" style="width:100%" onclick="currentSlide(2)" alt="laptsop">
                                </div>
                                <div class="columnslide">
                                    <img class="demo cursor" src="../img/<%= product.id %>/03-full.jpg" style="width:100%" onclick="currentSlide(3)" alt="laptop">
                                </div>
                                <div class="columnslide">
                                    <button type="button" class="btn-plus btn-outline-warning" title="Add image"><i class="fas fa-plus"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Project Seller Start Here -->
                    <div class="col-lg-7 mx-auto">
                        <div id="post-forms" class="text-center">
                            <form class="form-postProduct" action="/" method="POST">
                                <!-- for's label (Name of form, logo, etc) -->
                                <h1 class="h3 mb-3 font-weight-normal" style="text-align: center">Product information</h1>
                                <!-- product information form -->
                                <input type="name" name="name" class="form-control" placeholder="Name of Product" required="">
                                <input type="starting price" name="pass" class="form-control" placeholder="Starting price" required="">
                                <input type="price step" name="email" class="form-control" placeholder="Price step" required="">
                                <input type="price" name="email" class="form-control" placeholder="Instant purchase price">
                                <textarea type="description" name="description" class="form-control" placeholder="Description" required=""></textarea>
                                <input type="checkbox" name="auto-extend-check"> Auto extend
                                <button class="btn btn-primary btn-block" type="submit"><i class="fas fa-sign-in-alt"></i> Post</button>
                            </form>
                            <br>
                        </div>

                    </div>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <% include ../partial-layout/footer%>

            <!-- Bootstrap core JavaScript -->
            <script src="../vendor/jquery/jquery.min.js"></script>
            <script src="../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

            <!-- Plugin JavaScript -->
            <script src="../vendor/jquery-easing/jquery.easing.min.js"></script>

            <!-- Custom scripts for this template -->
            <script src="../js/detailsProduct.js"></script>
            <script src="../js/index.js"></script>


</body>

</html>