<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Hello Auction</title>

    <!-- Bootstrap core CSS -->
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Fira+Sans|Kaushan+Script' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>

    <!-- Custom styles for this template -->
    <link href="/css/bidder-detailsProduct.css" rel="stylesheet">

</head>

<body id="page-top">

    <% include ../partial-layout/header%>
    <!-- Header -->
    <header class="masthead">
        <div class="container">
            <% include ../partial-layout/search-bar%>
        </div>
    </header>

    <!-- container -->
    <section class="bg-light page-section">
        <div class="container ">
            <ul class="breadcrumb">
                <li><a href="/index">Home</a></li>
                <li><a href="/list-view/1?category=all">Product</a></li>
                <li><a href="/list-view/1?category=<%= product.catID %>"><%= product.category %></a></li>
                <li><%= product.name %></li>
            </ul>
            <hr class="featurette-divider ">
        </div>
    </section>

    <section class="bg-light page-section">
        <div class="container">
            <div class="row featurette ">
                <div class="col-lg-5 mx-auto">
                    <div class="modal-body">
                        <div class="slideshow-container">

                            <!--  images with number  -->
                            <div class="mySlides">
                                <div class="numbertext">1 / 3</div>
                                <img src="/img/<%= product.id %>/1-full.jpg" style="width:100%">

                            </div>

                            <div class="mySlides">
                                <div class="numbertext">2 / 3</div>
                                <img src="/img/<%= product.id %>/2-full.jpg" style="width:100%">

                            </div>

                            <div class="mySlides">
                                <div class="numbertext">3 / 3</div>
                                <img src="/img/<%= product.id %>/3-full.jpg" style="width:100%">

                            </div>

                            <!-- Next and previous buttons -->
                            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                            <a class="next" onclick="plusSlides(1)">&#10095;</a>
                        </div>
                        <br>

                        <!-- Thumbnail images -->
                        <div class="rowslide">
                            <div class="columnslide">
                                <img class="demo cursor" src="/img/<%= product.id %>/1-full.jpg" style="width:100%" onclick="currentSlide(1)" alt="laptop">
                            </div>
                            <div class="columnslide">
                                <img class="demo cursor" src="/img/<%= product.id %>/2-full.jpg" style="width:100%" onclick="currentSlide(2)" alt="laptsop">
                            </div>
                            <div class="columnslide">
                                <img class="demo cursor" src="/img/<%= product.id %>/3-full.jpg" style="width:100%" onclick="currentSlide(3)" alt="laptop">
                            </div>
                        </div>
                    </div>

                </div>
               
                 
                <div class="col-lg-7 mx-auto">
                    <!-- Project Details Go Here -->
                    <p class="content"><%= product.description %></p>

                    <h1 class=" product-price mt-4"> Current Bid: $<%= product.price %></h1>
                    <hr class="featurette-divider">
                    <button data-target="#alert-buy" data-toggle="modal" type="button" class="btn-buynow btn-warning  mb-5">BUY NOW FOR $<%= product.buynow%>
                </button>

                    <!-- bid box -->
                    <p> Reserve price has been met:</p>
                    <form class="">
                      <div class="quantity buttons_added">  
                        <button type="button" class="minus btn btn-default btn-number" disabled="disabled" data-type="minus" data-field="quant[1]">-</button>
                        <input id="input-number" type="number" name="quant[1]" class="input-number qty " step="<%=product.bidStep%>" value="<%=nextStep%>" min="<%=nextStep%>" max="<%=product.buynow%>">
                        <button type="button" class="plus btn btn-default btn-number" data-type="plus" data-field="quant[1]">+</button>
                      </div>  
                       <input class="none productId" type="text" value="<%= product.id %>">
                        <button data-target="#alert-check" data-toggle="modal" data-toggle="tooltip" data-placement="bottom" title="Bid now" type="button" class="btn-bid btn-outline-warning"><i class="fas fa-gavel"></i></button>
                        <button data-toggle="tooltip" data-placement="bottom" title="Add to watch list " type="button" class="btn-bid btn-outline-warning addWatchList"><i class="far fa-heart"></i></button>
                    </form>
                    <ul class="list-inline content mx-auto">
                         <p><i class="fas fa-user"></i>Bidder:  <a href="#" class="link"><b>****<%= product.hold.substring(4,50)%></b></a></p>
                        <li>Item condition: <%= product.status %></li>
                        <li>Auction starts: <%= product.dateStart %></li>
                        <li>Auction ends: <%= product.dateEnd %></li>
                    </ul>
              </div>
          </div>
        </div>
    </section>

  
    <!-- product details -->
     <!-- modal login alert -->
    <div id="alert-check" class="modal fade" role="dialog">
      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Are you sure!</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button> 
          </div>
          <div class="modal-footer">
            <button id="Bid"  type="button" class="btn btn-default" data-dismiss="modal">OK</button>
          </div>
        </div>
      </div>
    </div>

    <div id="alert-buy" class="modal fade" role="dialog">
      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Are you sure!</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button> 
          </div>
          <div class="modal-footer">
            <button id="buynow"  type="button" class="btn btn-default" data-dismiss="modal">OK</button>
          </div>
        </div>
      </div>
    </div>
        
    
    <!-- tabs vendor details -->
    <section class="bg-light page-section">
      <div class="container">
        <div class="tab">
          <button class="tablink" onclick="openTab('Description',this)" id="defaultOpen">DESCRIPTION </button>
                           <button class="tablink" onclick="openTab('Auction history',this)">AUCTION HISTORY</button>
                        <button class="tablink" onclick="openTab('Vendor info',this)">VENDOR INFO</button>
                    </div>

                    <!-- Tab content -->
                    <div id="Description" class="tabcontent">
                        <p class="content"><%= product.detail %></p>
                    </div>

                    <div id="Holder" class="tabcontent">
                        <p><i class="fas fa-user"></i>Bidder: <%= product.hold%> <a href="#" class="link"><b>Model</b></a></p>
                        <p><i class="fas fa-star link"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i> <%= product.bidRating %>from reviewer</p>
                    </div>

                     <div id="Auction history" class="tabcontent">
                        
                        <table>
                            <tr>
                                <th>Date</th>
                                <th>Bid</th>
                                <th>User</th>
                                <th>Note</th>
                            </tr>
                             <% lists.forEach(function(history) { %>
                            <tr>
                                <td><%=history.date%> </td>
                                <td> <%=history.price%> </td>
                                <td> <%=history.biddername%> </td>
                                <td> </td>

                            </tr>
                            <% }); %>
                        </table>
                         
                    </div>

                    <div id="Vendor info" class="tabcontent">
                        <p><i class="fas fa-shopping-cart"></i>Store Name: ****<%= own.name.substring(4,50) %></p>
                        <p><i class="fas fa-user"></i>Email: <b><%= own.email %></b></p>
                        <p><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i> <%=point%> rating from reviewer</p> <!---<%= own.rating %> -->
                    </div>
                </div>

    </section>


    <!-- list Grid -->
    <section class="bg-light page-section" id="related-products">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center mb-5">
                    <h2 class="section-heading">Related Products</h2>
                </div>
            </div>
            <div class="row">
                <% relateItems.forEach(function(item) { %>
               <div class="col-md-4 col-sm-6 list-item">
                    <a class="list-link" data-toggle="modal" href="#<%= item.id %>">
                        <div class="list-hover">
                            <div class="list-hover-content">
                                <i class="fas fa-plus fa-3x"></i>
                            </div>
                        </div>
                        <div class="container">
                            <img class="img-fluid" src="/img/thumbnail/<%= item.id %>-thumbnail.jpg">
                        </div>
                    </a>
                    <div class="list-caption">
                        <h4>
                            <%= item.name %>
                        </h4>
                        <a class="text-muted a-currentbid">Current price: </a>
                        <a class=" text-muted a-price">$
                            <%= item.price %></a>
                        <div>
                           <!--  <button data-toggle="tooltip" data-placement="bottom" title="View details product" type="button" class="btn-bid  btn-outline-warning">
                                <a href="/bidder/bidder-detail-product/?id=<%= item.id %>"><i class="fas fa-search"></i></a></button> -->
                            <input class="none productID" type="text" value="<%= item.id %>">
                            <button data-toggle="tooltip" data-placement="bottom" title="Add to watch list " type="button" class="btn-bid btn-outline-warning addWatchList1"><i class="far fa-heart "></i></button>
                            <button data-toggle="tooltip" data-placement="bottom" title="Bid now" type="button" class="btn-bid btn-outline-warning"> <a href="/bidder/bidder-detail-product/?id=<%= item.id %>"><i class="fas fa-gavel"></i></a>
                            </button>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </section>

    <% include ../partial-layout/footer%>



    <!-- Bootstrap core JavaScript -->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="/js/bidder-detailsProduct.js"></script>
    


</body>

</html>