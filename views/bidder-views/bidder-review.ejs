<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Hello Auction</title>

  <!-- Bootstrap core CSS -->
  <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom fonts for this template -->
  <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
  <link href='https://fonts.googleapis.com/css?family=Fira+Sans|Kaushan+Script' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <!-- Custom styles for this template -->
  <link href="/css/bidder-review.css" rel="stylesheet">
 
</head>

<body id="page-top">
<% include ../partial-layout/header%>
    <!-- Header -->
  <header class="masthead">
    <div class="container">
        <div class="input-group search-bar text-center">
            <div class="input-group-prepend dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown">
              <i class="fas fa-filter"></i>
            </a>
            <div class="dropdown-menu" >
              <a class="dropdown-item" href="#">Search by name</a>
              <a class="dropdown-item" href="#">Search by category</a>
            </div>
          </div>
          <input type="text" class="form-control" placeholder="Search your goods">
          <div class="input-group-append">
            <button class="btn btn-secondary" type="button"><i class="fa fa-search"></i></button>
          </div>

        </div>
        <br> <br>
      </div>
    </header>

    <!-- container -->
    <div class="container">
        <div class="row mt-5">
        <div class="col-md-4">
          <div class="profile-sidebar">
            <!-- card profile -->
            <div class="card">
              <img src="/img/profile/user01.jpg" alt="John" style="width:100%">
              <h1 class="mt-3"><%= user.name %></h1>
            <!--   <p class="title">CEO & Founder, Example</p> -->
              <p><a href="#"><i class="fa fa-dribbble"></i></a>
              <a href="#"><i class="fa fa-twitter"></i></a>
              <a href="#"><i class="fa fa-linkedin"></i></a>
              <a href="#"><i class="fa fa-facebook"></i></a></p>
              <div>
                <button class="btn-contact">Contact</button>
              </div>
              <div>
                <hr class="featurette-divider "> 
                <span class="heading"><b>User Rating</b></span>
                <br>
                <span class="heading">Point: <%= user.point %></span>
                <div class="row-rate">
                  <div class="side">
                    <div><a><i class="far fa-thumbs-up"></i></a></div>
                  </div>
                  <div class="middle">
                    <div class="bar-container">
                      <div class="bar-up"></div>
                    </div>
                  </div>
                  <div class="side right">
                    <div><%= user.totalLike %></div>
                  </div>
                </div>
                <div class="row-rate">
                   <div class="side">
                    <div><a><i class="far fa-thumbs-down"></i></a></div>
                  </div>
                  <div class="middle">
                    <div class="bar-container">
                      <div class="bar-down"></div>
                    </div>
                  </div>
                  <div class="side right">
                    <div><%= user.totalDislike %></div>
                  </div>
                </div>
              </div>
              <div >
                <hr class="featurette-divider "> 
                <p><b>You are a bidder </b></p>
                <button data-toggle="modal" data-target="#become-seller" class="btn-contact">Become a seller</button>
              </div>
              
             <div >
                <hr class="featurette-divider "> 
                <p><button ><a class="account-setting" href="bidder-account-setting">Account setting</a></button></p>
            </div>         
          </div> 
          </div>
        </div>

        <!-- request becomeseller modal -->
          <div class="modal fade" id="become-seller" role="dialog">
              <div class="modal-dialog">         
                <!-- Modal content-->                        
                <div class="modal-content">              
                    <!-- INPUT CONTAINER -->
                    <div class="input-container">
                      <div class="modal-header"> 
                        <h4 class="modal-title">Your request has been send already!</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                      </div>
                      <div class="modal-body">
                        <p>Pleases wait for reponse.</p>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-warning" data-dismiss="modal">OK</button>
                      </div>                             
                    </div>
                    <!-- /INPUT CONTAINER -->
                </div>
                
              </div>
            </div>
        <!-- /request becomeseller modal -->
        <div class="col-lg-8">
                <!-- menu -->
            <div class="topnav">
              <a class="active" href="bidder-review">Reviews</a>
              <a href="bidder-wonproduct">Won products</a>
              <a  href="bidder-bidding">Bidding products</a>
               <a   href="bidder-watchlist">Watch list</a>
              <!-- <a href="#contact">Account setting</a> -->
            </div>          
                <div class="profile-content">
                  <div class="left-border">
                    <h3><b>Reviews</b></h3>
                  </div>
                 <!-- tab menu content -->
               <!-- Main View -->

                 <section class="bg-light page-section">
                  <div class="container">
                   
                   
                     <% list.forEach(function(review) { %>
                      <div class="review-card">
                      <div class="row">
                    
                     
                      <div class="col-md-2">
                        <img class="review-avatar"src="/img/profile/user01.jpg">
                      </div>
                      <div class="col-md-10 mt-3 ">
                        <span>
                         <h4 class="mb-0"> <%= review.userName %> <i class="far fa-thumbs-up"></i></h4>
                        <a class="text-muted ">  <%= review.time %></a>
                      </br>
                        <div class="review mb-3 mt-2 mr-3"><a class="text-muted "> <%= review.review %></a></div>
                        </span>
                       
                      </div>
                      </div>
                      </div>
                        <hr class="featurette-divider ">
                       <% }); %>

                    
                    
                   </div>
                    
                </section>
               
                </div>

        </div>
      </div>
      </div>

  <!-- Footer -->
  <% include ../partial-layout/footer%>

  <!-- Bootstrap core JavaScript -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Plugin JavaScript -->
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="/js/bidder-review.js"></script>
 


</body>

</html>
