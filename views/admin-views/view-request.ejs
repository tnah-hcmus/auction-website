<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS-->
    <link rel="stylesheet" href="../vendor/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome CSS-->
    <link href="../vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <!-- Fontastic Custom icon font-->
    <!-- Google fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,700">
    <!-- Custom stylesheet - for your changes-->
    <link rel="stylesheet" href="../css/admin.css">
    <!-- Favicon-->
    <link rel="shortcut icon" href="../img/favicon.ico">
  </head>
  <body>
    <div class="page">
      <div class="page-content d-flex align-items-stretch"> 
        <!-- Side Navbar -->
        <% include ../partial-layout/admin-sidebar%>
        <div class="content-inner">
          <!-- Page Header-->
          <header class="page-header" id = "dash-title">
            <div class="container-fluid">
              <h2>Dashboard/Manage user/View all users</h2>
            </div>
          </header>
          <section>
            <div class="container-fluid">
              <div class="row">
                <div class="col-lg-12">
                  <div class="card">
                    <div class="card-close">
                      <div class="dropdown">
                        <button type="button" id="closeCard3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle"><i class="fa fa-ellipsis-v"></i></button>
                        <div aria-labelledby="closeCard3" class="dropdown-menu dropdown-menu-right has-shadow">
                          <a href="#" class="dropdown-item remove"> <i class="fa fa-times"></i>Close</a>
                          <a href="#" class="dropdown-item edit" id = "edit-table"> <i class="fas fa-edit"></i>Edit</a>
                          <a href="#" class="dropdown-item edit" id = "add-btn"> <i class="fas fa-plus"></i>Add user</a></div>
                      </div>
                    </div>
                    <div class="card-header d-flex align-items-center">
                      <h3>All request nows</h3>
                    </div>
                    <div class="card-body">
                      <div class="table-responsive">                       
                        <table class="table table-striped table-hover" class="display" id ="users-table">
                          <thead>
                            <tr class="text-center">
                              <th scope="col">No</th>
                              <th scope="col">Username</th>
                              <th scope="col">Accept</th>
                              <th scope="col">Decline</th>
                            </tr>
                          </thead>
                          <tbody class="text-center">
                            <% list.forEach(function(item) {  %>
                            <tr>
                              <td><%= item.id %></td>
                              <td><%= item.username %></td>
                              <td><button class="btn btn-primary accept"><a class="list-link" data-toggle="modal" href="#confirm-modal">Accept</a></button></td>
                              <td><button class="btn btn-primary delete"><a class="list-link" data-toggle="modal" href="#confirm-modal">Decline</a></button></td>
                            </tr>
                            <% }) %>
                          </tbody>
                        </table>
                       </div>
                      </div>
                    </div>
                  </div>
                </div>
            </div>
          </section>
        </div>
    </div>
  </div>
</body>
  <!-- Footer -->
     <!-- Footer -->
  <% include ../partial-layout/footer%>
    <!-- Confirm box -->
    <% include ../partial-layout/admin-confirm-box%>
    <!-- JavaScript files-->
    <script src="../vendor/jquery/jquery.min.js"></script>
    <script src="../vendor/popper.js/umd/popper.min.js"> </script>
    <script src="../vendor/bootstrap/js/bootstrap.min.js"></script>
    <!-- Main File-->
    <script src="../js/front.js"></script>
  </body>
</html>